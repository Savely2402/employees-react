{
    "compilerOptions": {
        "outDir": "./dist/",
        "allowJs": true,
        "target": "ES2020",
        "module": "ESNext",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "moduleResolution": "Node",
        "jsx": "react-jsx",
        "forceConsistentCasingInFileNames": true,
        "strict": true
    },
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS"
        }
    },

    "exclude": ["node_modules"]
}
