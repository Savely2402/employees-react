{
    "compilerOptions": {
        "outDir": "./dist/",
        "allowJs": true,
        "target": "ES2020",
        "module": "ESNext",
        "typeRoots": ["types/"],
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "moduleResolution": "Node",
        "jsx": "react-jsx",
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"]
        }
    },
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS"
        }
    },

    "exclude": ["node_modules"]
}
